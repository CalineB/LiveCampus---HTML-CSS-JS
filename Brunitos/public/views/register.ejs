<%- include('./partials/header.ejs')  %>

<link rel="stylesheet" href="/brunitos/css/register.css">
    <main>
      
      <form action="" method="post">
        <h2 class="auth_title">Créer un compte</h2>

        <input type="email" placeholder="monemail@mail.fr" required><label for="email" data-translate="register.email">Votre courriel</label>
        <input type="email" placeholder="monemail@mail.fr" required><label for="email" data-translate="register.email">Confirmer votre courriel</label>
        <br>
        <input type="tel" placeholder="07 00 00 00 00" required><label for="phone" aria-required="true" data-translate="register.phone">Téléphone</label>
        <br>
        <input type="text" placeholder="Client"><label for="firstname" aria-required="true" data-translate="register.firstname">Prénom</label>
        <br>
        <input type="text" placeholder="mon surnom"><label for="firstname" data-translate="register.aka">AKA (facultatif)</label>
        <br>
        <input type="varchar" placeholder="SATISFAIT"><label for="lastname" data-translate="register.lastname">Nom</label>

        <br><br>
        
        <h2>Addresse</h2>
        <input type="text" name="street_number" placeholder="Numéro de rue">
        <br>
        <input type="text" name="street" placeholder="Nom de rue">
        <br>
        <input type="text" name="additional_line" placeholder="Complément d'adresse">
        <br>
        <input type="text" name="postal_code" placeholder="Code postal">
        <br>
        <input type="text" name="city" placeholder="Ville">
        <br>
        <br>
        <input type="password"><label for="password" data-translate="register.psw">Mot de passe</label>
        <input type="password"><label for="password_conf" data-translate="register.psw_conf">Confirmation du mot de passe</label>

        <br>
        <br>
        <br>
        <input type="submit" id="submit-button" value="Créer un compte" class="btn" data-translate="resister.register_submit_btn">
      </form>

    </main>
    <%- include('./partials/footer.ejs')  %>
